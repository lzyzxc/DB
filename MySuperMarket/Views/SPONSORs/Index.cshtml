    <script>
    layui.use(['form', 'table'], function () {
            var table = layui.table;
            var $ = layui.jquery;
            var form = layui.form;
            table.render({
                elem: '#update_info_table'
                , url: '/SPONSORs/getJson/' //数据接口
                , method: "post"
                , cellMinWidth: 276
                //全局定义常规单元格的最小宽度，layui 2.2.1 新增
                //width 支持：数字、百分比和不填写。
                //你还可以通过 minWidth 参数局部定义当前单元格的最小宽度，layui 2.2.1 新增
                , cols: [[
                    { type: 'numbers' },
                    { field: 'SPONSOR_ID', sort: true, title: '赞助商ID' },
                    { field: 'SPONSOR_NAME', sort: true, title: '赞助商名称' },
                    { field: 'PHONE_NUMBER', sort: true, title: '联系方式' },
                    { align: 'center', toolbar: '#staff-table-bar', title: '操作' }
                ]]

            });
            //添加按钮点击事件
            $(document).on('click', '#sponsor-btn-add', function () {
                layer.open({
                    type: 1,
                    title: '添加赞助商',
                    area: '400px',
                    offset: 'auto',
                    content: $('#sponsor-add-form').html()
                });
            });
            // 工具条点击事件
            table.on('tool(update_info_table)', function (obj) {
                var data = obj.data;
                if (obj.event === 'edit') { //修改

                    layer.open({
                        type: 1,
                        title: '赞助商信息修改',
                        area: '400px',
                        offset: 'auto',
                        content: $('#sponsor_info-model').html(),
                        success: function () {
                            form.val('sponsor-update-form', data);
                        }

                    });
                } else if (obj.event === 'del') { //删除
                    layer.confirm('确定要删除吗？', { title: '提示' }, function (index) {

                        layer.close(index);
                        //向服务端发送删除指令
                    });
                }
            });
        });</script>
